html 
    head 
        title pug-express 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    
    body 
        <form action="/pug/cargar" method="post">
            <div class="row">
            <div class="col">
                <input type="text" name="nombreprod" class="form-control" placeholder="Nombre del Producto" aria-label="First name">
            </div>
            <div class="col">
                <input type="number" name="precio" class="form-control" placeholder="Precio" aria-label="Last name">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary">Cargar Productos</button>
                <a class="btn btn-outline-success" href="/pug" role="button">Volver</a>
            </div>
            </div>
        </form>